{% extends 'base.html.twig' %}
{% block title %} - Contact{% endblock %}

{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href={{asset("css/lectures_parcours.css")}}/>
{% endblock %}

{% block body%}
  <div id="Partie">
    <div id="Position_Partie">
      <a href="" id="Selection_Gauche">
        <i class="fal fa-arrow-alt-left" aria-hidden="true"></i>
        <h3>BREVET</h3>
      </a>
      <div id="Selection_Centre">
        <h2>{{ Parcours.nom }}</h2>
      </div>
      <a href="" id="Selection_Droite">
        <h3>EXIA.CESI</h3>
        <i class="fal fa-arrow-alt-right" aria-hidden="true"></i>
      </a>
      <a id="Cancel" href="{{path('parcours')}}"><i class="fal fa-times" aria-hidden="true"></i></a>
    </div>
  </div>

  <div class="Contenu">
    <p>
      {{ Parcours.description }}
  </div>

  <div id="Partie_Basse">
    <div id="Position_Partie_Basse">
      <div id="Bloque_1">
        <div class="Elements_bas">
          <i class="fal fa-user-graduate" aria-hidden="true"></i>
          <h4>{{ Parcours.poste }}</h4>
        </div>
        <div class="Elements_bas">
          <i class="fal fa-calendar-alt" aria-hidden="true"></i>
          <h4>2012 - 2015</h4>
        </div>
      </div>

      <div id="Bloque_2">
        <div class="Elements_bas">
          <i class="fal fa-map-marker-alt" aria-hidden="true"></i>
          <h4>{{ Parcours.lieu }}</h4>
        </div>
        <div class="Elements_bas">
          <a href=""><i class="fal fa-globe" aria-hidden="true"></i>
            ACCEDER AU SITE WEB</a>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
